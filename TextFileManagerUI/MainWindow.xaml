<Window x:Class="TextFileManagerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextFileManagerUI"
        mc:Ignorable="d"
        Title="Text File Manager" Height="750" Width="1200">

    <Grid>
        <!-- Main Layout with Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- For file input section -->
            <RowDefinition Height="Auto"/>
            <!-- New row for Compare Files button -->
            <RowDefinition Height="*"/>
            <!-- For differences table -->
            <RowDefinition Height="Auto"/>
            <!-- For output and actions -->
        </Grid.RowDefinitions>

        <!-- File Input Section -->
        <StackPanel Orientation="Horizontal" Margin="20" Grid.Row="0" HorizontalAlignment="Stretch">
            <TextBlock Text="File 1:" FontSize="16" Height="30" VerticalAlignment="Center" Margin="0,5,10,0"/>
            <TextBox x:Name="File1Path" FontSize="16" Width="300" Height="30" IsReadOnly="True" 
                     Margin="0,0,10,0" VerticalContentAlignment="Center"/>
            <Button Content="Browse" FontSize="14" Width="80" Height="30" Click="BrowseFile1_Click"/>

            <TextBlock Text="File 2:" FontSize="16" Height="30" VerticalAlignment="Center" Margin="20,5,10,0"/>
            <TextBox x:Name="File2Path" FontSize="16" Width="300" Height="30" IsReadOnly="True" 
                     Margin="0,0,10,0" VerticalContentAlignment="Center"/>
            <Button Content="Browse" FontSize="14" Width="80" Height="30" Click="BrowseFile2_Click"/>
        </StackPanel>

        <!-- Compare Files Button (Positioned Below File 1 Browse) -->
        <Button Content="Compare Files" FontSize="16" Width="130" Height="50" Grid.Row="1" 
                HorizontalAlignment="Left" Margin="20,5,0,15" Click="CompareFiles_Click"/>

        <!-- Differences Table -->
        <ScrollViewer Grid.Row="2" Margin="20,10,20,10" VerticalScrollBarVisibility="Auto">
            <DataGrid x:Name="DifferencesGrid" AutoGenerateColumns="False" 
                  HeadersVisibility="Column" SelectionMode="Single" RowHeight="25">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="Height" Value="30"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <!-- Line Number -->
                    <DataGridTextColumn Header="Line Number" Binding="{Binding LineNumber}" Width="120"/>

                    <!-- Content from File 1 -->
                    <DataGridTemplateColumn Header="File 1" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding File1Content}" TextWrapping="Wrap" FontSize="16"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Vertical Separator -->
                    <DataGridTemplateColumn Width="5">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="Gray" Width="2" Height="Auto" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Content from File 2 -->
                    <DataGridTemplateColumn Header="File 2" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding File2Content}" TextWrapping="Wrap" FontSize="16"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Choice Selector -->
                    <DataGridTemplateColumn Header="Choose" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <RadioButton GroupName="{Binding LineNumber}" Content="File 1" IsChecked="{Binding UseFile1}" 
                                         Margin="5,0" FontSize="14" VerticalContentAlignment="Center"/>
                                    <RadioButton GroupName="{Binding LineNumber}" Content="File 2" IsChecked="{Binding UseFile2}" 
                                         Margin="5,0" FontSize="14" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <!-- Output and Actions Section -->
        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="20,10,20,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Output File Name:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="OutputFileName" FontSize="16" Width="300" Height="30" Margin="0,0,20,0" VerticalContentAlignment="Center"/>
                <TextBlock Text="Format:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="OutputFormat" FontSize="14" Width="100" Height="30" VerticalContentAlignment="Center">
                    <ComboBoxItem Content=".txt" IsSelected="True"/>
                    <ComboBoxItem Content=".doc"/>
                    <ComboBoxItem Content=".odt"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Save Location:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="SaveLocation" FontSize="16" Width="300" Height="30" IsReadOnly="True" Margin="0,0,20,0" VerticalContentAlignment="Center"/>
                <Button Content="Browse" FontSize="14" Width="80" Height="30" Click="BrowseSaveLocation_Click" Margin="0,0,280,0"/>
                <Button Content="Save Output" FontSize="16" Width="150" Height="50" Click="SaveOutput_Click"/>
            </StackPanel>
       
        </StackPanel>
    </Grid>

</Window>
